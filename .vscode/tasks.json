{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "mix",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "install dependencies",
      "args": ["deps.get"]
    },
    {
      "taskName": "test",
      "args": ["test"]
    },
    {
      "taskName": "lint",
      "args": ["credo", "--strict"]
    },
    {
      "taskName": "run",
      "args": [
        "run"
      ]
    },
    {
      "taskName": "build",
      "args": [
        "compile"
      ]
    },
    {
      "taskName": "migrate",
      "args": [
        "ecto.migrate"
      ]
    }
  ]
}